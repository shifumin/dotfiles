{
  "model": "opus",
  "theme": "dark",
  "cleanupPeriodDays": 30,
  "permissions": {
    "allow": [
      "Bash(cargo:*)",
      "Bash(cat:*)",
      "Bash(git add:*)",
      "Bash(git restore:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Edit(*)",
      "List(*)",
      "Read(**)",
      "webFetch(domain:*)"
    ],
    "deny": [
      "Bash(git push --force-with-lease origin main)",
      "Bash(git push -f origin main)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf .git)",
      "Edit(~/.ssh/id_*)",
      "Edit(~/.ssh/*_rsa)",
      "Write(~/.ssh/id_*)",
      "Write(~/.ssh/*_rsa)"
    ]
  },
  "apiKeyHelper": null,
  "includeCoAuthoredBy": false,
  "preferredNotifChannel": "terminal_bell"
}
