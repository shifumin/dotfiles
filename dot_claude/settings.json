{
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(bundle:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git remote:*)",
      "Bash(git restore:*)",
      "Bash(go:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(pip:*)",
      "Bash(pnpm:*)",
      "Bash(python:*)",
      "Bash(yarn:*)",
      "Edit(!.git/**)",
      "Edit(!node_modules/**)",
      "Edit(./**)",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "LS(**)",
      "Read(**)",
      "WebFetch(domain:*)",
      "WebSearch",
      "Write(!.git/**)",
      "Write(./**)"
